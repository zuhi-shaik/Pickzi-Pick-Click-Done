{
  "info": {
    "name": "Pickzi Login API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login (username + password)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"jdoe\",\n  \"password\": \"SecurePass123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/login",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "login"]
        },
        "description": "Authenticates a user using username (or email) and password. Returns JWT token and user info."
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000", "type": "string" }
  ]
}
