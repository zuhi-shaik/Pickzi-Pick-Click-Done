{
  "info": {
    "name": "Pickzi Forgot Password (OTP via Mobile)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1) Request OTP (send to mobile)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"usernameOrEmail\": \"jdoe\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/forgot-password",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "forgot-password"]
        },
        "description": "Generates a 4-digit OTP and (in dev) returns it as dev_otp. In production, it must be sent via SMS."
      },
      "response": []
    },
    {
      "name": "2) Verify OTP (get reset token)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"usernameOrEmail\": \"jdoe\",\n  \"otp\": \"1234\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/verify-otp",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "verify-otp"]
        },
        "description": "Validates the OTP and returns a short-lived resetToken (10 min)."
      },
      "response": []
    },
    {
      "name": "3) Reset Password (use resetToken)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"resetToken\": \"<paste from verify-otp>\",\n  \"newPassword\": \"NewSecurePass123\",\n  \"confirmPassword\": \"NewSecurePass123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/reset-password",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "reset-password"]
        },
        "description": "Resets the password if resetToken is valid and not expired."
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000", "type": "string" }
  ]
}
