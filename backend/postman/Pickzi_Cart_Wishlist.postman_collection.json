        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/me/cart",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "me", "cart"]
            },
            "description": "Retrieve current user's saved cart items."
          },
          "response": []
        },
        {
          "name": "Add or Update Cart Item",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"productId\": \"<PRODUCT_OBJECT_ID>\",\n    \"quantity\": 2,\n    \"size\": \"M\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/me/cart",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "me", "cart"]
            },
            "description": "Add a product to the cart or overwrite its quantity. Fields: productId (ObjectId), quantity (>0), size (required)."
          },
          "response": []
        },
        {
          "name": "Increment Cart Quantity",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"productId\": \"<PRODUCT_OBJECT_ID>\",\n    \"delta\": 1,\n    \"size\": \"M\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/me/cart",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "me", "cart"]
            },
            "description": "Adjust quantity of a cart item. Use negative delta to decrease. Fields: productId (ObjectId), delta (number), size (required)."
          },
          "response": []
        },
        {
          "name": "Remove Cart Item",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/me/cart/{{productId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "me", "cart", "{{productId}}"],
              "variable": [
                {
                  "key": "productId",
                  "value": "<PRODUCT_OBJECT_ID>"
                }
              ]
            },
            "description": "Remove a single product from the cart. Optionally include query param size to remove only that size variant (e.g. ?size=M)."
          },
          "response": []
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/me/cart",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "me", "cart"]
            },
            "description": "Remove all products from the cart."
          },
          "response": []
        }
      ]
    },
